<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputNuovoTurno"
    android:background="@color/light_blue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/title_nuovo_turno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUOVO TURNO (min)"
            android:textSize="@dimen/activity_title_font_size"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"/>
        <EditText
            android:id="@+id/nuovo_turno_insert"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title_nuovo_turno"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:background="@drawable/button_border"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:inputType="number"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nuovo_turno_insert"
            android:text="Inserisci nuovo valore"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:onClick="newTurnInsert"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>